<h2>
<%= "Passenger #{@passenger.id}: #{@passenger.name}" %>
<%= "Phone number: #{@passenger.phone_num}" %>
</h2>

<% @passenger.total_cost %>

<%= button_to "Edit", edit_passenger_path(@passenger.id), method: :get %>
<%= button_to "Delete", passenger_path(@passenger), method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"} %>
<%= button_to "Add New Trip", passenger_new_trip_path(@passenger.id), method: :post %>

<%= "#{@passenger.name} has taken #{@passenger.trips.length} trip(s)" %>

<table>
  <tr>
    <th>Trip Number</th>
    <th>Driver ID</th>
    <th>Cost of Trip</th>
    <th>Trip Rating</th>
  </tr>
<% @passenger.trips.each do |trip| %>
<tr>
  <td><%= link_to "Trip #{trip.id}", trip_path(trip.id) %></td>
  <td><%= "Driver Id: #{trip.driver_id}" %></td>
  <td><%= "Cost of trip: $#{trip.cost_in_dollars}" %></td>
  <td><%= "Trip rating: #{trip.rating}" %></td>
  </tr>
  <% end %>
</table>
