<h2>Driver Details</h2>

<div>
  <strong><%= "Driver : #{@driver.name}" %></strong>

  <p><%= "Vin: #{@driver.vin}" %></p>
</div>

<div>
  <%= @driver.total_earnings %>
</div>


<div>
  <%= @driver.avg_rating %>
</div>

<div>
  <%= button_to "Edit Driver", edit_driver_path(@driver.id), method: :get %>
  <%= button_to "Delete Driver", driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"} %>
</div>

<h2>Driver Trips</h2>
<table>
  <tr>
    <th>ID</th>
      <th>Passenger</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% @driver.trips.all.each do |trip| %>
      <tr>
        <td><%= link_to "Trip #{trip.id}", trip_path(trip.id) %></td>
        <td><%= trip.passenger_id %></td>
        <td><%= trip.date %></td>
        <td><%= trip.rating %></td>
        <td><%="$#{'%.02f' % (trip.cost / 100)}"%></td>
        <td><%= link_to "Edit Trip", edit_trip_path %></td>
        <td><%= link_to "Delete Trip", trip_path(trip.id), method: :delete %></td>
      </tr>
    <% end %>
  </ul>
</div>
